{
  "name": "rentingapp-server",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "main": "./dist/server.js",
  "scripts": {
    "watch": "tsc-watch --onSuccess \"npm run start\"",
    "start": "JWT_ACCESS_SECRET=${JWT_ACCESS_SECRET:-$(node -p 'require(\"./package.json\").config.jwt_access_secret')} DATABASE=${DATABASE:-$(node -p 'require(\"./package.json\").config.dev_db')} NODE_PATH=dist node ./dist/server.js",
    "build": "tsc",
    "gen:db-types": "DATABASE=$(node -p 'require(\"./package.json\").config.dev_db') npx zapatos",
    "compose:up": "docker-compose -f docker/rentingapp/docker-compose.yml up -d",
    "compose:build": "docker-compose -f docker/rentingapp/docker-compose.yml build",
    "migrate": "DATABASE_URL=${DATABASE:-$(node -p 'require(\"./package.json\").config.dev_db')} SHADOW_DATABASE_URL=$(node -p 'require(\"./package.json\").config.shadow_db') npx graphile-migrate",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand"
  },
  "config": {
    "dev_db": "postgres://postgres:password@localhost:5432/rentingapp",
    "shadow_db": "postgres://postgres:password@localhost:5432/rentingapp_shadow",
    "root_db": "postgres://postgres:password@localhost:5432/postgres",
    "jwt_access_secret": "DEV_jwt_access_secret"
  },
  "dependencies": {
    "@pothos/core": "^3.3.3",
    "@pothos/plugin-dataloader": "^3.3.1",
    "@pothos/plugin-relay": "^3.6.0",
    "@pothos/plugin-scope-auth": "^3.4.2",
    "@urql/introspection": "^0.3.1",
    "apollo-server-express": "^3.5.0",
    "aws-sdk": "^2.1135.0",
    "cross-fetch": "^3.1.4",
    "dataloader": "^2.0.0",
    "date-fns": "^2.28.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.3.1",
    "file-type": "16.5.3",
    "firebase-admin": "^10.0.2",
    "graphql": "^16.2.0",
    "pg": "^8.7.1",
    "stripe": "^9.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.4",
    "@types/pg": "^8.6.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.5.1",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.4",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.4",
    "zapatos": "^5.0.0"
  }
}
